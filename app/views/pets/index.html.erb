<% provide(:title, 'All pets') %>
<h1>All pets</h1>
<%= link_to "Search", new_search_path %>

<%= will_paginate %>
<ul class="pets">
  <% @pets.each do |pet| %>
  
    <li>
      <%= link_to pet.nickname, pet %>
      <br/>
      <%= "Age:" %><%= pet.age %>
      <br/>
      <%= "Gender:" %><%= (pet.gender==0?"Male":"Female") %>
      <br/>
      <%= "Breeds:" %><%= pet.breeds %>
      <br/>
      <%= "City:" %><%= pet.city %>
      <br/>
      <%= link_to pet.owner_email, pet %>
      
    </li>
  <% end %>
</ul>

<%= will_paginate %>
