<% provide(:title, 'Add pet') %>
<h1>Add pet</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@pet) do |f| %>
    <%= render 'shared/error_messages_pet' %>
      <%= f.label :nickname %>
      <%= f.text_field :nickname, class: 'form-control' %>

      <%= f.label :age %>
      <%= f.text_field :age,  class: 'form-control' %>

      <%= f.label :gender %>
      <%= f.select(:gender,@option = options_for_select([['',''],['Male','0'],['Female','1']],@pet.gender)) %>

      <%= f.label :breeds %>
      <%= f.select(:breeds,@option = options_for_select([[''],['Labrador'],['German Shepherd'],['German Shepherd'],['Beagle'],['Golden Retriever'],['Yorkshire Terrier'],['Bulldog'],['Box'],['Poodle'],['Others']],@pet.breeds)) %>

      <%= f.submit "Add an pet", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

