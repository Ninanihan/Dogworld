<%= simple_form_for @product, html: { multipart: true } do |f| %>
  <% if @product.errors.any? %>
    <div id="errors">
      <p>
        <%= @product.errors.count %>
        Prevented this recipe froms saving
      </p>
      <ul>
        <% @product.errors.full_messages.each do |msg| %>
          <li>
            <%= msg %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="panel-body"></div>
  <%= f.input :image, input_html: { class: 'form-control' } %>
    <%= f.input :breeds, input_html: { class: 'form-control' } %>
    <%= f.input :gender, input_html: { class: 'form-control' } %>
    <%= f.input :age, input_html: { class: 'form-control' } %>
    <%= f.input :city, input_html: { class: 'form-control' } %>
    <%= f.input :price, input_html: { class: 'form-control' } %>
    <%= f.input :description, input_html: { class: 'form-control' } %>
 
  <%= f.button :submit, class: "btn btn-primary" %>

<% end %>