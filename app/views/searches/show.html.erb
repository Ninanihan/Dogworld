<h1>Search Result</h1>
<p><%= link_to 'Back', new_search_path %></p>

<% if @search.search_pets.empty? %>
  <p>No Records Found</p>
<% else %>

  <% @search.search_pets.each do |f| %>
  <br>
  <div class="div">
  	<h1><%= f.nickname %></h1>
  	<p>Age: <%= f.age %></p>
  	<p>Gender: <%= f.gender %></p>
  	<p>Breeds: <%= f.breeds %></p>
  </div>
<% end %>
<% end %>

